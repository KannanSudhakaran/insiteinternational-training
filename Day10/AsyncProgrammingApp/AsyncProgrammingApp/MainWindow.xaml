<Window x:Class="AsyncProgrammingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncProgrammingApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="SyncPrint" 
                Name="btnPrintSync"
                Click="btnPrintSync_Click"
                Width="100"
                Height="50"
                HorizontalAlignment="Left" Margin="82,115,0,0" VerticalAlignment="Top"/>
        <Button Content="Hello" 
                Name="btnHello"
                Width="100" Height="50"
                HorizontalAlignment="Left" Margin="211,115,0,0" VerticalAlignment="Top" Click="btnHello_Click" RenderTransformOrigin="-0.393,0.327"/>
        <Button Content="Thread" 
                Name="btnThread"
                Width="100"
                Height="50"
                HorizontalAlignment="Left"
                Margin="316,115,0,0" VerticalAlignment="Top" Click="btnThread_Click"/>
        <Button Content="Task"
                Name="btnTask"
                Width="100"
                Height="50"
                HorizontalAlignment="Left" Margin="421,110,0,0" VerticalAlignment="Top" Click="btnTask_Click"/>
        <Button Content="Awaitable"
                Name="btnAwaitable"
                Width="100"
                Height="50"
                HorizontalAlignment="Left" 
                Margin="537,110,0,0" VerticalAlignment="Top" Click="btnAwaitable_Click"/>
        <Button Content="WithResult" 
                Name="btnWithResult"
                Width="100"
                Height="50"
                HorizontalAlignment="Left" Margin="658,115,0,0" VerticalAlignment="Top" Click="btnWithResult_Click"/>
        <Button Content="Http API call" 
                Name="btnRestAPI"
                
                HorizontalAlignment="Left" Margin="340,198,0,0" VerticalAlignment="Top" Height="48" Width="131" Click="btnRestAPI_Click"/>

    </Grid>
</Window>
